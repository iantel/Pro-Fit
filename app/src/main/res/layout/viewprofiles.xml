<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenu"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/viewprofilelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="125dp"
        android:orientation="vertical" >
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@drawable/profile_frame"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addORremove">

        <ImageView
            android:id="@+id/profileview2"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/unkown_profile_new"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:background="@drawable/button4"
        android:text="Training"
        android:textSize="13sp"
        android:onClick="openTrainingFriend"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/frameLayout1" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:orientation="vertical"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/button1">

        <TextView
            android:id="@+id/viewExercise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bench Press"
            android:textColor="#c40000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/viewExerciseNum1" />

        <TextView
            android:id="@+id/viewExercise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Squat"
            android:textColor="#c40000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/viewExerciseNum2" />

        <TextView
            android:id="@+id/viewExercise3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadlift"
            android:textColor="#c40000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/viewExerciseNum3" />

    </LinearLayout>

    <TextView
        android:id="@+id/loadprofilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Profile Name"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="#c40000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/viewprofilelayout"
        android:layout_alignLeft="@+id/linearLayout2" />

    <Button
        android:id="@+id/addORremove"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:background="@drawable/button4"
        android:textSize="13sp"
        android:text="Add friend"
        android:layout_below="@+id/frameLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp" />

</RelativeLayout>